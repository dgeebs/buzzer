extends layout

block content
  h1= title
  center
    svg(width=400, height=150)
      rect(x=0, y=50, rx=20, ry=20, width=400, height=300, style="fill:red")
      text(x=125, y=100, fill="#ffffff", font-size="50", font-family="Arial") HELLO
      text(x=120, y=130, fill="#ffffff", font-size="30", font-family="Arial") MY NAME IS
      rect(x=0, y=150, rx=0, ry=0, width=400, height=150, style="fill:white")
    div
      input(id="name", size=17)
    svg(width=400, height=50)
      rect(x=0, y=-50, rx=20, ry=20, width=400, height=70, style="fill:red")
    div
      span(id='first') &nbsp;
    div
      button(class="material-button material-button-toggle") BUZZ!
    div
      br
      button(class="material-button") reset
